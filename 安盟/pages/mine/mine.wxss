.info{
  width: 97%;
  height: 300rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-bottom: solid 1rpx black;
}
.myInfo{
  width: 300rpx;
  height: 200rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: space-around;
}
.myPic,.myPic image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.nickName{
  font-size: 40rpx;
  font-weight: bold;
}
.showInfo{
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: space-around;
  font-size: 24rpx;
}
.showContent,.contentItem{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.showContent view{
  border: solid 1rpx black;
  width: 60rpx;
  height: 40rpx;
}
image{
  width: 48rpx;
  height: 48rpx;
}
.myContent{
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 0 80rpx;
}
.myContent text{
  margin: 0 0 0 -400rpx;
  font-size: 14px;
  font-family: Microsoft Yahei;
}